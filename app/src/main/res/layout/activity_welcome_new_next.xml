<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Product List :"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:weightSum="6">

            <CheckBox
                    android:id="@+id/rice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.8"
                    android:checked="true"
                    android:text="Rice" />

            <CheckBox
                    android:id="@+id/Dal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:checked="true"
                    android:text="Dal" />

            <CheckBox
                    android:id="@+id/Peanuts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:checked="true"
                    android:text="Peanuts" />

            <CheckBox
                    android:id="@+id/Jaggery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:checked="true"
                    android:text="Jaggery" />

            <CheckBox
                    android:id="@+id/Potato"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Potato" />

            <CheckBox
                    android:id="@+id/Chickpea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:checked="true"
                    android:text="Chickpea" />
        </LinearLayout>


        <HorizontalScrollView
                android:id="@+id/horizontal_scroll_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="visible">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                        android:id="@+id/tableLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                    <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#E0FFFF">

                        <TextView
                                android:id="@+id/district"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:background="@drawable/shape_border"
                                android:gravity="center"
                                android:padding="5dp"
                                android:paddingRight="2dp"
                                android:text="Name Of District"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        <TextView
                                android:id="@+id/block"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:background="@drawable/shape_border"
                                android:gravity="center"
                                android:padding="5dp"
                                android:paddingRight="2dp"
                                android:text="Name Of Block"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        <TextView
                                android:id="@+id/bank"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:background="@drawable/shape_border"
                                android:gravity="center"
                                android:padding="5dp"
                                android:paddingRight="2dp"
                                android:text="Name Of Bank"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        <TextView
                                android:layout_width="0dp"
                                android:id="@+id/branch"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:background="@drawable/shape_border"
                                android:gravity="center"
                                android:padding="5dp"
                                android:paddingRight="2dp"
                                android:text="Name Of Branch"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/shape_border"
                                android:gravity="center"
                                android:padding="5dp"
                                android:paddingLeft="5dp"
                                android:text="Claim Registerd"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/shape_border"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Document Ready But Not Submitted "
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textStyle="bold" />


                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/shape_border"
                                android:gravity="center"
                                android:text="Claim Under Process"
                                android:textColor="#000"
                                android:textStyle="bold" />


                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/shape_border"
                                android:gravity="center"
                                android:text="Claim Settled"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/shape_border"
                                android:gravity="center"
                                android:text="Claim Rejected"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/shape_border"
                                android:gravity="center"
                                android:text="Total Claim Amount"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerviewreports"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>
       <Button
               android:layout_width="150dp"
               android:layout_height="50dp"
               android:id="@+id/button"
               android:gravity="center"
               android:layout_margin="10dp"
               android:layout_gravity="center"
           android:background="@drawable/buttonshape"
           android:text="Login"/>

    </LinearLayout>
</ScrollView>