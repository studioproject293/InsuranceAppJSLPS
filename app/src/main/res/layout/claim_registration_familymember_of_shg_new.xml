<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textColorHint="#000">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:id="@+id/name"
                    android:inputType="textCapWords"
                    android:maxLength="40"
                    android:textColor="#000"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:text="Select Gender"
                android:background="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <RadioGroup
                android:id="@+id/radioSex"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_margin="10dp"
                android:layout_height="wrap_content" >

            <RadioButton
                    android:id="@+id/radioMale"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:text="Male"
                    android:checked="true"
                    android:textColor="#000"
                    android:buttonTint="@color/colorAccent" />

            <RadioButton
                    android:id="@+id/radioFemale"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"

                    android:textColor="#000"
                    android:buttonTint="@color/colorAccent"
                    android:layout_height="wrap_content"
                    android:text="Female" />

        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:hint="Name Of Nominee"
                android:textColorHint="#000">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nameOfnomminee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:maxLength="40"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Contact No. of Nominee"
                android:textColorHint="#000">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/contactnoofnominee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="phone"
                    android:digits="0123456789"
                    android:maxLength="10"
                    android:textColor="#000"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Please Select District"
                android:textColorHint="#000">

            <AutoCompleteTextView
                    android:id="@+id/sppiner_district"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:padding="15dp"
                    android:maxLength="40"
                    android:textColor="#000"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Please Select BLock"
                android:textColorHint="#000">

            <AutoCompleteTextView
                    android:id="@+id/spinner_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:padding="15dp"
                    android:maxLength="40"
                    android:textColor="#000"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Please Select Panchyat"
                android:textColorHint="#000">

            <AutoCompleteTextView
                    android:id="@+id/spinner_panchayt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:padding="15dp"
                    android:maxLength="40"
                    android:textColor="#000"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Please Select Village"
                android:textColorHint="#000">

            <AutoCompleteTextView
                    android:id="@+id/spinner_village"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:padding="15dp"
                    android:maxLength="40"
                    android:textColor="#000"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Please Select SHG"
                android:textColorHint="#000">

            <AutoCompleteTextView
                    android:id="@+id/sppiner_shg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:padding="15dp"
                    android:maxLength="40"
                    android:textColor="#000"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Please Select Bank"
                android:textColorHint="#000">

            <AutoCompleteTextView
                    android:id="@+id/sppiner_bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:padding="15dp"
                    android:maxLength="40"
                    android:textColor="#000"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Please Select Branch"
                android:textColorHint="#000">

            <AutoCompleteTextView
                    android:id="@+id/sppiner_branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:padding="15dp"
                    android:maxLength="40"
                    android:textColor="#000"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:visibility="gone"
                android:text="Type of Insurance"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:id="@+id/linearlayoutCheckbox"
                android:visibility="gone"
                android:weightSum="4">

            <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:buttonTint="@color/colorAccent"
                    android:textColor="#000"
                    android:text="PMSBY" />

            <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:textSize="16sp"
                    android:buttonTint="@color/colorAccent"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:text="PMJJBY" />

            <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:textSize="16sp"
                    android:buttonTint="@color/colorAccent"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:text="PMJAY" />

            <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:textSize="14sp"
                    android:buttonTint="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:textColor="#000"
                    android:text="Asset Insurance" />
        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name of caller Person"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColorHint="#000">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:inputType="textCapWords"
                    android:maxLength="40"
                    android:id="@+id/nameofcaller"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile No. Caller"

                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:textColorHint="#000">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:maxLength="10"
                    android:digits="0123456789"
                    android:inputType="phone"
                    android:textColor="#000"
                    android:id="@+id/mobileofcaller"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonSave"
                android:text="Get OTP"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:textColor="#FFF"
                android:layout_margin="20dp"
                android:background="@drawable/buttonshape"/>
    </LinearLayout>
</ScrollView>
