<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textColorHint="#000">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:maxLength="40"
                    android:textColor="#000"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:hint="Name Of Nominee"
                android:textColorHint="#000">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nameOfnomminee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:maxLength="40"
                    android:inputType="textCapWords"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Contact No. of Nominee"
                android:textColorHint="#000">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/contactnoofnominee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="0123456789"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Please enter name of District"
                android:textColorHint="#000">

            <AutoCompleteTextView
                    android:id="@+id/sppiner_district"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:padding="15dp"
                    android:maxLength="40"
                    android:textColor="#000"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Please enter name of BLock"
                android:textColorHint="#000">

            <AutoCompleteTextView
                    android:id="@+id/spinner_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:padding="15dp"
                    android:maxLength="40"
                    android:textColor="#000"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Please enter name of Panchyat"
                android:textColorHint="#000">

            <AutoCompleteTextView
                    android:id="@+id/spinner_panchayt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:padding="15dp"
                    android:maxLength="40"
                    android:textColor="#000"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Please enter name of Village"
                android:textColorHint="#000">

            <AutoCompleteTextView
                    android:id="@+id/spinner_village"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:padding="15dp"
                    android:maxLength="40"
                    android:textColor="#000"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Please enter name of SHG"
                android:textColorHint="#000">

            <AutoCompleteTextView
                    android:id="@+id/sppiner_shg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:padding="15dp"
                    android:maxLength="40"
                    android:textColor="#000"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Please enter name of Bank"
                android:textColorHint="#000">

            <AutoCompleteTextView
                    android:id="@+id/sppiner_bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:padding="15dp"
                    android:maxLength="40"
                    android:textColor="#000"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Please enter name of Branch"
                android:textColorHint="#000">

            <AutoCompleteTextView
                    android:id="@+id/sppiner_branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:padding="15dp"
                    android:maxLength="40"
                    android:textColor="#000"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

            <FrameLayout
                    android:layout_marginTop="10dp"
                    android:background="@drawable/drawable_spinner_border"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_width="match_parent"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="#000"
                        android:spinnerMode="dropdown"
                        android:layout_height="40dp"
                        android:id="@+id/datepicker"
                        android:textColor="#000"
                        />
                <ImageView
                        android:src="@drawable/right_arrow"
                        android:background="#FFFFFF"
                        android:layout_width="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:layout_height="30dp"/>
            </FrameLayout>

            <TextView
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="1dp"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:text="Date of Incidence"
                    android:background="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </FrameLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:visibility="gone"
                android:text="Type of Insurance"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:id="@+id/linearlayoutCheckbox"
                android:visibility="gone"
                android:weightSum="4">

            <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:buttonTint="@color/colorAccent"
                    android:text="PMSBY"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:buttonTint="@color/colorAccent"
                    android:text="PMJJBY"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:buttonTint="@color/colorAccent"
                    android:text="PMJAY"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.3"
                    android:buttonTint="@color/colorAccent"
                    android:text="Asset Insurance"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Name of caller Person"
                android:textColorHint="#000">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nameofcaller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:inputType="textCapWords"
                    android:maxLength="40"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:layout_marginBottom="10dp"
                android:hint="Mobile No. Caller"
                android:textColorHint="#000">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mobileofcaller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:digits="0123456789"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
                android:id="@+id/buttonSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/buttonshape"
                android:text="Get OTP"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
